@model List<Camping2015_2016.Models.Emplacement>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gestion des données</title>
    <style type="text/css">
        table {
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Emplacement</th>
            <th> Type </th>
            <th>Disponibilité</th>
            <th>Parking</th>
        </tr>
        @foreach (var emplacement in Model)
        {
            <tr>
                <td>@emplacement.Id</td>
                <td>@emplacement.tente</td>
                <td>@emplacement.disponible</td>
                <td>@emplacement.parking</td>
                <td>@Html.ActionLink("Modifier " + emplacement.disponible, "ModifierRestaurant", new { id = emplacement.parking })</td>
            </tr>
        }
    </table>
</body>
</html>
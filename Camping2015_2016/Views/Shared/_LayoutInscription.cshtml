            <div class="grid_12">
                <div class="menu_block">
                    <nav class="horizontal-nav full-width horizontalNav-notprocessed">
                        <ul class="sf-menu">
                            <li><a href="@Url.Action("Index","Index")">Accueil</a></li>
                            <li><a href="@Url.Action("Reservation","Reservation")">Réservations</a></li>
                            <li><a href="index-2.html">A faire</a></li>

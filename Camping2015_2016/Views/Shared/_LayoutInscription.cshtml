                                @if (!HttpContext.Current.User.Identity.IsAuthenticated)
                                {
                                    <a href="@Url.Action("Inscription", "Utilisateur")">S'inscrire</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Gestion", "Gestion")">Gestion du compte</a>

